{{> nav}}
<h1>Beers</h1>
<h3>Add a beer to the catalog</h3>
<form id="addbeer" action="/beers" method="post">
    Name: <input type="text" name="name"><br>
    Brewery: <select name="brewery_id">
    {{#each brewery}}
        <option value="{{id}}">{{name}}</option>
    {{/each}}
</select><br>
    Style:
    <select name="style_id">
        {{#each style}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    <br/>
    Add Flavors:
    <select name="flavor_ids" multiple="multiple">
        {{#each flavor}}
            <option value="{{id}}">{{descriptor}}</option>
        {{/each}}
    </select>
`<br>
    BeerAdvocate Rating: <input type="number" step=".01" name="ba_rating"><br>
    Awards?: <select name="awards"><br>
    <option value="yes">Yes</option>
    <option value="no">No</option>
</select><br>
    <input type="submit" value="Submit">
</form>

<table class="table table-striped">
    <thead>
    <th>Name</th>
    <th>Brewery</th>
    <th>Style</th>
    <th>BeerAdvocate Rating</th>
    <th>Awards</th>
    </thead>
    <tbody>
    {{#each beers}}
        <tr>
            <td>{{name}}</td>
            <td>{{brewery}}</td>
            <td>{{style}}</td>
            <td>{{ba_rating}}</td>
            <td>
                {{#if awards}}
                    Yes
                {{else}}
                    No
                {{/if}}
            </td>
            <td><button class="btn btn-danger" onclick="deleteBeer({{id}})">Delete</button></td>
            <td><a href="/beers/{{id}}" role="button" class="btn btn-primary">Update</a></td>
        </tr>
    {{/each}}
    </tbody>
</table>

<h3>Filter beers by flavor</h3>
<form id="searchBeer" action="/beers" method="get">
    Flavor:
    <select name="flavor_id">
        <option value="">All</option>
    {{#each flavor}}
        <option value="{{id}}">{{descriptor}}</option>
    {{/each}}
    </select>
    <br>
    <input type="submit" value="Search">
</form>

